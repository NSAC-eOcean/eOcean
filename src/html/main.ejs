<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>eOcean</title>
    <link rel="icon" href="${require('../assets/img/icon.png')}" type="image/png">
    <script src="https://nasa-gibs.github.io/gibs-web-examples/lib/openlayers-5.1.3/ol.js"></script>
</head>

<body>
    <nav class="navbar navbar-dark fixed-top bg-dark flex-md-nowrap p-0 shadow">
        <a class="navbar-brand col-12 mr-0 text-center" href="#">eOcean: R&R</a>
    </nav>

    <div class="container-fluid h-100">
        <div class="row h-100">
            <nav class="col-md-2 d-none d-md-block bg-dark sidebar">
                <div class="sidebar-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item text-white">
                            <a class="nav-link active" href="#">
                                <span data-feather="home"></span>
                                Dashboard <span class="sr-only">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item text-white">
                            <a class="nav-link" href="#" data-toggle="modal" data-target="#upload">
                                <span data-feather="uploadImageOrVideo"></span>
                                Upload Image or Video
                            </a>
                        </li>
                        <li class="nav-item text-white">
                            <a class="nav-link" href="#" id="animateTrigger">
                                <span data-feather="animate"></span>
                                Animate
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <main role="main" class="col-md-10 ml-sm-auto col-lg-10 pl-0 pr-0">
                <div id="mapView" class="mapView"></div>

                <div id='day-panel'>
                    <div id='day-label'></div>
                    <input id="day-slider" type="range" min="1" max="12" value="1">
                </div>
            </main>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="upload" tabindex="-1" role="dialog" aria-labelledby="uploadTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="uploadTitle">Upload Image or Video</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form action="//localhost:9000/upload" method="post" enctype="multipart/form-data" target="uploadFrame"
                    id="uploadForm">
                    <div class="modal-body">
                        <input type="file" name="image"><br>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Upload</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="modal fade" id="messageModal" tabindex="-1" role="dialog" aria-labelledby="messageTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="messageTitle">Thanks!!</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                    <div class="modal-body">
                        <h1 id='messageText'></h1>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
            </div>
        </div>
    </div>
    <iframe name="uploadFrame" id="uploadFrame" style="display: none;"></iframe>
</body>

</html>